[Unit]
Description=Robot API Interface
After=network.target

[Service]
Type=forking
Restart=on-failure
RestartSec=3
ExecStart=/usr/bin/screen -L -dmS api_interface bash -c 'cd "/home/pi/plantmonitor/api_interface/" ; /usr/bin/python3 "plantmonitor_api.py"'
User=pi

[Install]
WantedBy=multi-user.target
